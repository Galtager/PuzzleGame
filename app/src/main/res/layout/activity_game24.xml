<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebackground"
    tools:ignore="RtlHardcoded" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="7dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/bBackMenu24"
            android:background="@drawable/back"
            style="@style/bNavigationStyle"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/button"
            />
        <ImageButton
            android:id="@+id/bSoundOffOn24"
            android:background="@android:color/transparent"
            style="@style/bNavigationStyle"
            android:src="@drawable/soundoff"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/button"/>
        <ImageButton
            android:id="@+id/bNewGame24"
            android:background="@drawable/restart"
            style="@style/bNavigationStyle"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/button"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gameTitle24"
            style="@style/textPuzzleStyle"
            android:text="@string/game24" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tSScore24"
                android:text="@string/Score"
                android:textSize="@dimen/textScore24"
                style="@style/textGameStyle"/>

            <TextView
                android:id="@+id/tScore24"
                android:textSize="@dimen/textScore24"
                style="@style/textGameStyle"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tBestSScore24"
                android:text="@string/bestScore"
                android:textSize="@dimen/textRecord24"
                style="@style/textGameStyle"/>

            <TextView
                android:id="@+id/tBestScore24"
                android:textSize="@dimen/textRecord24"
                style="@style/textGameStyle"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="5"
            android:rowCount="5"
            android:background="@drawable/grid_border"
            android:layoutDirection="ltr">

            <ImageButton
                android:id="@+id/b2400"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginStart="@dimen/button_margin_border"
                android:layout_marginTop="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2401"
                android:layout_row="0"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2402"
                android:layout_row="0"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2403"
                android:layout_row="0"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2404"
                android:layout_row="0"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin_border"
                android:layout_marginEnd="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2410"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginStart="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2411"
                android:layout_row="1"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2412"
                android:layout_row="1"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2413"
                android:layout_row="1"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2414"
                android:layout_row="1"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>

            <ImageButton
                android:id="@+id/b2420"
                android:layout_row="2"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginStart="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2421"
                android:layout_row="2"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2422"
                android:layout_row="2"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2423"
                android:layout_row="2"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2424"
                android:layout_row="2"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>

            <ImageButton
                android:id="@+id/b2430"
                android:layout_row="3"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginStart="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2431"
                android:layout_row="3"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2432"
                android:layout_row="3"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2433"
                android:layout_row="3"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2434"
                android:layout_row="3"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>

            <ImageButton
                android:id="@+id/b2440"
                android:layout_row="4"
                android:layout_column="0"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_marginStart="@dimen/button_margin_border"
                android:layout_marginBottom="@dimen/button_margin_border"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2441"
                android:layout_row="4"
                android:layout_column="1"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2442"
                android:layout_row="4"
                android:layout_column="2"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2443"
                android:layout_row="4"
                android:layout_column="3"
                style="@style/gridBGameStyle24"
                android:layout_marginEnd="@dimen/button_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
            <ImageButton
                android:id="@+id/b2444"
                android:layout_row="4"
                android:layout_column="4"
                style="@style/gridBGameStyle24"
                android:layout_marginTop="@dimen/button_margin"
                android:contentDescription="@string/button"/>
        </GridLayout>

    </LinearLayout>
    <Button
        android:layout_marginBottom="30dp"
        android:id="@+id/hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_list"/>
</RelativeLayout>